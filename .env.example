FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=change-this-secret
DATA_ENCRYPTION_KEY=change-this-encryption-key
DATABASE_URL=sqlite:///instance/app.db

# SSH Configuration
REMOTE_COMMAND_TIMEOUT=30
MAX_SSH_WORKERS=8

# Reverse Shell Listener Configuration
REVERSE_SHELL_PORT=5000
REVERSE_SHELL_BIND_ADDRESS=0.0.0.0
REVERSE_SHELL_TIMEOUT=30
MAX_SHELL_SESSIONS=100
SHELL_COMMAND_TIMEOUT=30

# Dynamic IP Configuration (leave empty for auto-detect)
REVERSE_SHELL_PUBLIC_IP=
REVERSE_SHELL_LOCAL_IP=
# Options: 'public', 'local', or specific IP address
REVERSE_SHELL_DISPLAY_IP=public

# Admin Account
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password
