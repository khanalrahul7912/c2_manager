# ── Flask Core ─────────────────────────────────────────────
FLASK_APP=app.py
FLASK_ENV=production
FLASK_RUN_PORT=8000
FLASK_RUN_HOST=127.0.0.1

# ── Security Keys (CHANGE THESE) ──────────────────────────
SECRET_KEY=change-this-to-a-random-string
DATA_ENCRYPTION_KEY=change-this-to-another-random-string

# ── Database ──────────────────────────────────────────────
DATABASE_URL=sqlite:///instance/app.db

# ── Admin Account ─────────────────────────────────────────
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# ── SSH Configuration ─────────────────────────────────────
REMOTE_COMMAND_TIMEOUT=30
MAX_SSH_WORKERS=8

# ── Reverse Shell Listener ────────────────────────────────
REVERSE_SHELL_PORT=5000
REVERSE_SHELL_BIND_ADDRESS=0.0.0.0
REVERSE_SHELL_TIMEOUT=30
MAX_SHELL_SESSIONS=100
SHELL_COMMAND_TIMEOUT=120

# ── IP Configuration (leave empty for auto-detect) ────────
REVERSE_SHELL_PUBLIC_IP=
REVERSE_SHELL_LOCAL_IP=
# Options: 'public', 'local', or a specific IP address
REVERSE_SHELL_DISPLAY_IP=public
